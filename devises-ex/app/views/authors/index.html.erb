
<!-- app/views/authors/index.html.erb -->
<div class="container mt-3">
  <h1>Authors</h1>

  <div class="mb-3">
        <%= link_to "New Author", author_new_authors_path(@authors), class: "btn btn-primary" %>
    <!-- Add Export CSV button -->
      <%= link_to "CSV", authors_path(format: :csv), class: "btn btn-secondary mt-3" %>
  </div>

  <!-- Filterrific form -->
 <%= form_for_filterrific @filterrific do |f| %>
        <div class="mb-3">
          <%= f.text_field :search_query, class: "form-control", placeholder: "Search authors..." %>
        </div>
       
        <%= f.submit "Search", class: "btn btn-outline-info" %>
      <% end %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.name %></td>
          <td><%= author.email %></td>
          <td>
             <%= link_to "Show", author_show_authors_path(author), class: "btn btn-info btn-sm" %>
              <%= link_to "Edit", author_edit_authors_path(author), class: "btn btn-warning btn-sm" %>
                
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Pagination links -->
  <%= paginate @authors, params: request.query_parameters %>
</div>




